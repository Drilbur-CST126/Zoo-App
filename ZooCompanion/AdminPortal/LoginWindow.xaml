<Window x:Class="AdminPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPortal"
        mc:Ignorable="d"
        Title="Please Log In" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Username:"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Password:"/>
        <PasswordBox x:Name="PasswordBox"/>
        <Label Content="Loading..."/>
        <Button Content="Submit" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordBox}"/>
    </StackPanel>
</Window>
